@model YUJCSR.Web.Corporate.Models.CSOProfileModel
@{
    Layout = "_CRM-Layout";
}

<div class="container-fluid">
    <section>
        <div class="row">
            <div class="col-xl-4">
                <!-- Profile picture card-->
                <div class="card mb-4 mb-xl-0">
                    <div class="card-header">Company Logo</div>
                    <div class="card-body text-center">
                        <!-- Profile picture image-->
                        <img class="img-account-profile rounded-circle mb-2" src="/img/undraw_profile.svg" alt="">
                        <!-- Profile picture help block-->
                        <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                        <!-- Profile picture upload button-->
                        <button class="btn btn-primary" type="button">Upload image</button>
                    </div>
                </div>
            </div>
            <div class="col-xl-8">


                <div class="card mb-4">
                    <div class="card-header">Account Details</div>
                    <div class="card-body">
                        <form method="post">
                            @Html.HiddenFor(m => m.CSOID)

                            <div class="mb-3">
                                <label class="small mb-1">Company Name</label>
                                @Html.TextBoxFor(m => m.CSOName, new { @class = "form-control", @placeholder = "CSOName" })
                            </div>
                            <div class="mb-3">
                                <label class="small mb-1">Address</label>
                                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = "Address" })
                            </div>
                            <div class="mb-3">
                                <label class="small mb-1">Description</label>
                                @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @placeholder = "Description" })
                            </div>
                            <div class="row gx-3 mb-3">
                                <div class="col-md-6">
                                    <label class="small mb-1">Organization Type</label>
                                    @Html.TextBoxFor(m => m.OrgType, new { @class = "form-control", @placeholder = "orgType" })
                                </div>
                                <div class="col-md-6">
                                    <label class="small mb-1">Website</label>
                                    @Html.TextBoxFor(m => m.Website, new { @class = "form-control", @placeholder = "Website" })
                                </div>
                            </div>
                            <div class="row gx-3 mb-3">
                                <div class="col-md-6">
                                    <label class="small mb-1">Founder</label>
                                    @Html.TextBoxFor(m => m.Founder, new { @class = "form-control", @placeholder = "Founder" })
                                </div>
                                <div class="col-md-6">
                                    <label class="small mb-1" for="inputLocation">Contact Person</label>
                                    @Html.TextBoxFor(m => m.ContactPerson, new { @class = "form-control", @placeholder = "ContactPerson" })
                                </div>
                            </div>
                            <div class="row gx-3 mb-3">
                                <div class="col-md-6">
                                    <label class="small mb-1">Phone Number</label>
                                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @placeholder = "PhoneNumber" })
                                </div>
                                <div class="col-md-6">
                                    <label class="small mb-1" for="inputLocation">Email address</label>
                                    @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control", @placeholder = "EmailId" })
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="small mb-1" for="inputEmailAddress">Aim</label>
                                @Html.TextBoxFor(m => m.Aim, new { @class = "form-control", @placeholder = "Aim" })
                            </div>
                            <div class="mb-3">
                                <label class="small mb-1" for="inputEmailAddress">Vision</label>
                                @Html.TextBoxFor(m => m.Vision, new { @class = "form-control", @placeholder = "Vision" })
                            </div>
                            <div class="mb-3">
                                <label class="small mb-1" for="inputEmailAddress">Mission</label>
                                @Html.TextBoxFor(m => m.Mission, new { @class = "form-control", @placeholder = "Mission" })
                            </div>
                            <div class="mb-3">
                                <label class="small mb-1" for="inputEmailAddress">Objective</label>
                                @Html.TextBoxFor(m => m.Objective, new { @class = "form-control", @placeholder = "Objective" })
                            </div>
                            <div class="mb-3">
                                <label class="small mb-1" for="inputEmailAddress">Core Areas</label>
                                @Html.TextBoxFor(m => m.CoreAreas, new { @class = "form-control", @placeholder = "CoreAreas" })
                            </div>
                            <div class="mb-3">
                                <label class="small mb-1" for="inputEmailAddress">Other Info</label>
                                @Html.TextBoxFor(m => m.OtherInfo, new { @class = "form-control", @placeholder = "OtherInfo" })
                            </div>

                            <button class="btn btn-primary btn-sm float-right" type="submit">Save changes</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>